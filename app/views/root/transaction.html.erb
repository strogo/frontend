<% content_for :extra_javascript do %>
	<%= javascript_include_tag 'trackers/transaction.js', :defer=>"defer" %>
<% end %>
<section id="content" role="main" class="group">

  <header class="page-header group">
    <hgroup>
     <h1><span>Services</span> <%= @transaction.title %></h1>
    </hgroup>
  </header>
	<div class="article-container group">
  	<article role="article" class="group">
     <div class="inner">

       <div class="intro">
         <%= to_govspeak(@transaction.introduction) %>

         <% if @transaction.will_continue_on != '' %>
           <p>This will continue on <%= @transaction.will_continue_on %>.</p>
         <% end %>

         <p class="get-started"><a href="<%= @transaction.link %>" title="Begin <%= @transaction.title %> on the <%= @transaction.will_continue_on %> site in a new browser window" rel="external" class="button">Get started &rarr;</a></p>

       </div>

       <h2>What you need to know</h2>

       <% if @transaction.uses_government_gateway %>
         <p>Uses Government Gateway.</p>
       <% end %>
       <% if @transaction.minutes_to_complete.present? %>
         <p>This is probably going to take you <%= @transaction.minutes_to_complete %> minutes.</p>
       <% end %>

       <div class="more">
         <ul class="helpers group">
         <% @transaction.expectations.each do |e| %>
           <li class="<%= e.css_class %>">
             <%= e.text %>
           </li>
         <% end %>
         </ul>

         <%= to_govspeak(@transaction.more_information) %>
       </div>

       <% if @transaction.alternate_methods.present? %>
       <h2>Other ways to apply</h2>
       <div class="more">
       	<%= to_govspeak(@transaction.alternate_methods) %>
       </div>
       <% end %>

     </div>
   </article>
  <%= render 'publication_metadata', :publication => @transaction, :contact => @contact, :api_links => { :json => publication_path(@publication.slug, :edition => @edition, :format => :json) } %>
</div>

</section>

<!-- related -->
<div class="related-positioning">
	<div class="related-container">

   		<div class="related">
		     <div class="inner group">
		       <h2>Related tools &amp; topics</h2>
		       <nav role="navigation">
		         <ul>
                <%= (@transaction.related_items || "").html_safe %>
                <% if @transaction.section %>
                  <li class="related-topic"><a href="/<%= @transaction.section.parameterize %>">View more in <span><%= @transaction.section %>&rarr;</span></a></li>
                <% end %>
		         </ul>
		       </nav>
		     </div>
		   </div>

	</div>
</div>
<!-- end related -->