<% content_for :extra_javascript do %>
	<%= javascript_include_tag 'trackers/answer.js', :defer=>"defer" %>
<% end %>
<section id="content" role="main" class="group">

  <header class="page-header group">
      <hgroup>
        <h1><span>Quick answer </span><%= @answer.title %></h1>
      </hgroup>
  </header>
	<div class="article-container group">
	  	<article role="article" class="group">
	     <div class="inner">
	       <%= to_govspeak(@answer.body) %>
	     </div>
	   </article>
    <%= render 'publication_metadata', :publication => @answer, :contact => @contact, :api_links => { :json => publication_path(@answer.slug, :edition => @edition, :format => :json) } %>
	</div>
</section>

<!-- related -->
<div class="related-positioning">
	<div class="related-container">

		<div class="related">
			<div class="inner group">
				<h2>Related tools &amp; topics</h2>
				<nav role="navigation">
				  <ul>
				      <%= (@answer.related_items || "").html_safe %>
				      <% if @answer.section %>
				        <li class="related-topic"><a href="/<%= @answer.section.parameterize %>">View more in <span><%= @answer.section %>&rarr;</span></a></li>
				      <% end %>
				  </ul>
				</nav>
	   </div>
	 </div>

	</div>
</div>
<!-- end related -->