<% content_for :extra_javascript do %>
	<%= javascript_include_tag 'trackers/local-transaction.js', :defer=>"defer" %>
<% end %>
<section id="content" role="main" class="group">

	<header class="page-header group">
	 <hgroup>
	   <h1><span>Local Services</span> <%= @local_transaction.title %></h1>
	 </hgroup>
	</header>
	<div class="article-container group">
		<article role="article" class="group">
	    <div class="inner">

	      <% unless @local_transaction.authority %>

	      <% if flash[:no_council] %>
	      <p class="alert"><%= flash[:no_council] %></p>
	      <% end %>

	      <div class="find-nearest">

	        <%= to_govspeak(@local_transaction.introduction) %>

	        <form action="<%= council_lookup_path(@local_transaction.slug) %>" method="POST">

	          <fieldset>
	            <legend class="visuallyhidden">Postcode lookup</legend>
	            <% if @edition %>
	            <input type="hidden" name="edition" value="<%= @edition %>">
	            <% end %>
	            <label for="postcode">Enter a UK postcode <input id="postcode" name="postcode" type="text" placeholder="e.g. SW1A 2AA"></label>
	            <input type="submit" value="Get started â†’">
	          </fieldset>

	        </form>
	      </div>

	      <% else %>

	      <div class="intro">

	        <p>This service is provided by the <strong><%= @local_transaction.authority.name %></strong> council.</p>

	        <p>This will continue on the <%= @local_transaction.authority.name %> council website.</p>

	        <p class="get-started"><a href="<%= @local_transaction.authority.lgils.last.url %>" rel="external" title="Begin <%= @local_transaction.title %> on the <%= @local_transaction.authority.name %> site in a new browser window" class="button">Get started &rarr;</a></p>

	      </div>

	      <% end %>

	      <h2>What you need to know</h2>

	      <div class="more">
	        <ul class="helpers group">
	        <% @local_transaction.expectations.each do |e| %>
	          <li class="<%= e.css_class %>">
	            <%= e.text %>
	          </li>
	        <% end %>
	        </ul>

	        <%= to_govspeak(@local_transaction.more_information) %>
	      </div>

	    </div>
		</article>
    <%= render 'publication_metadata', :publication => @local_transaction, :contact => @contact, :api_links => { :json => publication_path(@publication.slug, :edition => @edition, :format => :json, :all => true) } %>
	</div>
</section>

<!-- related -->
<div class="related-positioning">
	<div class="related-container">

   		<div class="related">
		     <div class="inner group">
		       <h2>Related tools &amp; topics</h2>
		       <nav role="navigation">
		         <ul>
               <%= (@local_transaction.related_items||"").html_safe %>
               <% if @local_transaction.section %>
                 <li class="related-topic"><a href="/<%= @local_transaction.section.parameterize %>">View more in <span><%= @local_transaction.section %>&rarr;</span></a></li>
               <% end %>
		         </ul>
		       </nav>
		     </div>
		   </div>

	</div>
</div>
<!-- end related -->